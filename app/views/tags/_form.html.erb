<%= render  "shared/error", obj: @tag %>

<div class='row'>
    <div class='col-xs-12'>
      <%= form_for(@tag, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter Tag", autofocus: true %>    
        </div>
      </div>   
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">    
        <%= f.submit "New Tag", class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
    <% end %>
    
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
  </div>    
</div>
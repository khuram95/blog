<h1 class="text-center">Tags</h1>
<div class="text-center">
  <%= will_paginate @tags %>
  <% @tags.each do |tag| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li class="article-title">
                <%= link_to  "#{tag.name}", tag_path(tag) %>
            </li>
            <li><small><%= pluralize(tag.articles.count, "article") %></small></li>
          </div>
        </div>
      </ul>
  <%end%>
  <%= will_paginate @tags %>
</div>
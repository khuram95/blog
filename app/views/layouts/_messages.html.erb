
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
      <% flash.each do |name, msg| %>
      <div class='alert alert-<%="#{name}"%>'>
        <a href="#" data-dismiss="alert" class="close">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      </div>  
      <% end %>
  </div>
</div>
